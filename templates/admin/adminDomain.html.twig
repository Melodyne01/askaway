{% extends 'base.html.twig' %}
{% block head %}
<title>Askaway | Admin</title>
<meta name="robots" content="noindex">
{% endblock %}

{% block stylesheets %}
<link href="{{ asset('css/admin/admin.css') }}" rel="stylesheet" />
<link href="{{ asset('css/index.css') }}" rel="stylesheet" />
<link href="{{ asset('css/form.css') }}" rel="stylesheet" />
{% endblock %}

{% block body %}
<section class="form">
    {{ form_start(form) }}
    <div class="title">Modifier le domaine {{domain.name}}</div>
    <div class="names">
        {{ form_row(form.name, {'attr':{'placeholder':'Nom du domaine'}}) }}
        {{ form_row(form.url, {'attr':{'placeholder':'https://exemple.fr'}}) }}
    </div>
    <br>
    <div class="registerBtn">
        <button onclick="showLoader()" type="submit">Modifier</button>
    </div>
    {{ form_end(form) }}
</section>
<section>
    <a href="{{path('api_articles', {domain:domain.id})}}">Categories</a>
</section>
<section class="delete">
    <a href="{{path('deleteDomain', {id:domain.id})}}">Supprimer le domaine</a>
</section>
{% endblock %}
