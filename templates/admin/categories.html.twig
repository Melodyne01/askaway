{% extends 'base.html.twig' %}
{% block stylesheets %}
<link href="{{ asset('css/form.css') }}" rel="stylesheet" />
<link href="{{ asset('css/admin/categories.css') }}" rel="stylesheet" />

{% endblock %}
{% block body %}
<section class="form">
    {{ form_start(form) }}
    <div class="title">Ajouter une categorie</div>
    {{ form_row(form.name, {'attr':{'placeholder':'Name'}}) }}
    
    <div class="registerBtn">
        <button type="submit">Ajouter une categorie</button>
    </div>
    {{ form_end(form) }}
</section>
<section class="categories">
    {% for categorie in categories %}
        <a href="{{path('admin_categorie', {name:categorie.name})}}">
            <div class="categorie">{{categorie.name}}</div>
        </a>
    {% endfor %}
</section>
{% endblock %}
