{% extends 'base.html.twig' %}

{% block stylesheets %}
<link href="{{ asset('css/security/login.css') }}" rel="stylesheet" />

{% endblock %}

{% block body %}
<div class="registerCard">

    {{ form_start(registrationForm) }}

    <div class="names">
        {{ form_row(registrationForm.firstname, {'attr':{'placeholder':'Prénom'}}) }}
        {{ form_row(registrationForm.lastname, {'attr':{'placeholder':'Nom de famille'}}) }}
    </div>
    
    <div class="email">
        {{ form_row(registrationForm.email, {'attr':{'placeholder':'Adresse e-mail'}}) }}
    </div>
    <div class="passwords">
        {{ form_row(registrationForm.password, {'attr':{'placeholder':'Mot de passe'}}) }}
        {{ form_row(registrationForm.confirmPassword, {'attr':{'placeholder':'Confirmer mot de passe'}}) }}
    </div>
    <br>
    <div class="registerBtn">
        <button onclick="showLoader()" type="submit">S'inscrire</button>
    </div>
    {{ form_end(registrationForm) }}
    <div class="toLogin">
    <p>Vous avez déjà un compte ?? <a onclick="showLoader()" href="{{path('login')}}">Connectez-vous</a></p>
</div>
{% endblock %}