{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link href="{{ asset('css/index.css') }}" rel="stylesheet" />
    <link href="{{ asset('css/hideHeader.css') }}" rel="stylesheet" />
{% endblock %}
{% block body %}
<section class="logoCard">
    <div class="logo">
        <img src="{{ asset('image/logo.png') }}" alt="logo askaway">
    </div>
    <div class="input">
        <div class="label">Search</div>
        <input type="search">
    </div>
</section>
<section class="articles">
    {% for article in articles %}
        <div class="article">
            <a href="{{path('article', {id: article.id, slug: article.title|slugify})}}">
                <div class="card">
                    <div class="image">
                        <img src="{{ asset('/upload/'~ article.image)}}" alt="{{article.title}} image">
                    </div>
                    <div class="title">
                        <p>{{article.title}}</p>
                    </div>
                    <div class="date">
                        <p>{{article.createdAt|date("Y-m-d")}}</p>
                    </div>
                </div>
            </a>
        </div>
    {% endfor %}
</section>
{% endblock %}
