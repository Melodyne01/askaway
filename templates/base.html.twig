        {% block js %}{% endblock %}
        <script>
            function setActiveClass(element) {
            // Remove active class from all items
            var items = document.getElementsByClassName('link');

            // Remove active class from all items
            for (var i = 0; i < items.length; i++) {
                items[i].classList.remove('active');
            }
            
            // Add active class to the clicked item
            element.classList.add('active');
            
            // Store the active item index in localStorage
            var activeIndex = Array.prototype.indexOf.call(items, element);
            localStorage.setItem('activeIndex', activeIndex);
            }

            // Check if there is a stored active index and set the active class on page load
            window.onload = function() {
            var activeIndex = localStorage.getItem('activeIndex');
            if (activeIndex !== null) {
                var items = document.getElementsByClassName('link');
                if (activeIndex >= 0 && activeIndex < items.length) {
                items[activeIndex].classList.add('active');
                }
            }
        }
        </script>
    </body>
