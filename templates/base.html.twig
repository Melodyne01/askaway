<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Askaway{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        <link href="{{ asset('css/base.css') }}" rel="stylesheet" />
        {% block stylesheets %}
            
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <header>
            <div class="navbar">
                <div class="links">
                    <a href="{{path('home')}}" class="link">Home</a>
                    <a href="#" class="link">Top articles</a>
                    {% if app.user %}
                    <a href="{{path('userprofile', {id:app.user.id})}}" class="link">Profile</a>
                    {% else %}
                    <a href="{{path('login')}}" class="link">Login</a> 
                    {% endif %}
                </div>
            </div>
        </header>
        <main>
            <section>
                <h1 class="hiddenTitle">{% block hiddenTitle %}{% endblock %}</h1>
                {% block body %}{% endblock %}
            </section>
        </main>
        
    </body>
</html>
